@model AttenanceSystemApp.ViewModels.DepartmentEmployeesViewModel

<div class="container text-center">
	<h1 class="my-5">Employees of department: @Model.Department.Name</h1>
	<a asp-controller="Employee" asp-action="Create" class="btn btn-warning mb-5 text-center">Create new employee</a>
	<table class="table table-success table-striped">
		<thead>
			<tr>
				<th scope="col">ID</th>
				<th scope="col">First name</th>
				<th scope="col">Last Name</th>
				<th scope="col">Hourly rate</th>
				<th scope="col">Show attenance</th>
				<th scope="col">Action</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.Employees)
			{
					<tr>
						<th scope="row">@item.Id</th>
						<td>@item.FirsName</td>
						<td>@item.LastName</td>
						<td>@item.HourlyRate</td>
						<td>
								<a class="btn btn-warning btn-sm" asp-controller="Employee" asp-action="Show">Show</a>
						</td>
						<td>
							<div class="d-flex align-items-center justify-content-center gap-2">
								<a class="btn btn-warning btn-sm" asp-controller="Employee" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
								<form method="post">
										<button type="submit" class="btn btn-danger btn-sm" asp-controller="Employee" asp-action="Delete" 
									asp-route-id="@item.Id">Delete</button>
								</form>
							</div>
						</td>
					</tr>
			}
		</tbody>
	</table>
	<div class="d-flex justify-content-end">
		<a class="btn btn-secondary my-2" asp-action="Index">Back</a>
	</div>
</div>
