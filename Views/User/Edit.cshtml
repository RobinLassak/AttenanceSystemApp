@using AttenanceSystemApp.Models
@model AppUser

<h1 class="text-center my-5">Edit user</h1>
<form asp-action="Edit" method="post">
	<div asp-validation-summary="All" class="text-danger"></div>
	<div class="form-group">
		<input type="hidden" name="id" value="@Model.Id" />
		<label class="form-label" asp-for="UserName">Name:</label>
		<input type="text" asp-for="UserName" class="form-control" />
		<label class="form-label" asp-for="Email">Email:</label>
		<input type="email" asp-for="Email" class="form-control" />
		<label class="form-label" name="password">Password:</label>
		<input type="password" name="password" class="form-control" />
		<span asp-validation-for="UserName" class="text-danger"></span>
	</div>
	<div class="mt-3">
		<button type="submit" class="btn btn-warning my-2">Update</button>
		<button type="reset" class="btn btn-danger my-2">Reset</button>
	</div>
</form>
