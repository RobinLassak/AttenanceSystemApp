@using AttenanceSystemApp.DTO
@model AttenanceRecordDTO

<div class="container">
    <h1 class="my-5 text-center">Edit Attendance for @Model.Date.ToString("dd.MM.yyyy")</h1>
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="text-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                    <div>@error.ErrorMessage</div>
            }
        </div>
    }

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="AttenanceType" />
        <input type="hidden" asp-for="EmployeeId" />
        <input type="hidden" name="EmployeeId" value="@Model.EmployeeId" />
        <input type="hidden" name="Date" value="@Model.Date.ToString("yyyy-MM-dd")" />

        <div class="form-group">
            <label class="form-label">Attendance In</label>
            <input type="time" class="form-control" name="AttenanceIn" value="@Model.AttenanceIn?.ToString("hh\\:mm")" />
            <label class="form-label">Attendance Out</label>
            <input type="time" class="form-control" name="AttenanceOut" value="@Model.AttenanceOut?.ToString("hh\\:mm")" />
            <label class="form-label">Doctor In</label>
            <input type="time" class="form-control" name="DoctorIn" value="@Model.DoctorIn?.ToString("hh\\:mm")" />
            <label class="form-label">Doctor Out</label>
            <input type="time" class="form-control" name="DoctorOut" value="@Model.DoctorOut?.ToString("hh\\:mm")" />
            <div class="mt-1">
                <label class="mb-2" for="IsVacation">Vacation</label>
                <select class="form-control" id="IsVacation" name="IsVacation">
                    @if (Model.IsVacation)
                    {
                        <option value="true" selected>Yes</option>
                        <option value="false">No</option>
                    }
                    else
                    {
                        <option value="true">Yes</option>
                        <option value="false" selected>No</option>
                    }
                </select>
            </div>
            <div class="mt-1">
                <label class="mb-2" for="IsSickLeave">Sick leave</label>
                <select class="form-control" id="IsSickLeave" name="IsSickLeave">
                    @if (Model.IsSickLeave)
                    {
                            <option value="true" selected>Yes</option>
                            <option value="false">No</option>
                    }
                    else
                    {
                            <option value="true">Yes</option>
                            <option value="false" selected>No</option>
                    }
                </select>
            </div>
        </div>
        <div class="mt-3 d-flex justify-content-between">
            <div>
                <button type="submit" class="btn btn-warning">Save</button>
            </div>
            <div>
                <a asp-action="Index" asp-controller="Employee" class="btn btn-secondary text-white">Back</a>
            </div>
        </div>
    </form>
</div>
