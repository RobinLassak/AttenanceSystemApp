@using AttenanceSystemApp.DTO
@model AttenanceRecordDTO

<div class="container">
    <h1 class="my-5 text-center">Edit Attendance for @Model.Date.ToString("dd.MM.yyyy")</h1>
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="text-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                    <div>@error.ErrorMessage</div>
            }
        </div>
    }

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="AttenanceType" />
        <input type="hidden" asp-for="EmployeeId" />
        <input type="hidden" name="EmployeeId" value="@Model.EmployeeId" />
        <input type="hidden" name="Date" value="@Model.Date.ToString("yyyy-MM-dd")" />

        <div class="mb-3">
            <label class="form-label">Attendance In</label>
            <input type="time" class="form-control" name="AttenanceIn" value="@Model.AttenanceIn?.ToString("hh\\:mm")" />
        </div>

        <div class="mb-3">
            <label class="form-label">Attendance Out</label>
            <input type="time" class="form-control" name="AttenanceOut" value="@Model.AttenanceOut?.ToString("hh\\:mm")" />
        </div>
        <div class="mt-3 d-flex justify-content-between">
            <div>
                <button type="submit" class="btn btn-warning">Save</button>
            </div>
            <div>
                <a asp-action="ForOneEmployee" class="btn btn-secondary text-white">Back</a>
            </div>
        </div>
    </form>
</div>
