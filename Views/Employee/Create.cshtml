@using AttenanceSystemApp.DTO
@model EmployeeDTO

<div class="container">
	<h1 class="my-5 text-center">Create new employee</h1>
	<form asp-action="Create" method="post">
	<div class="form-group">
		<label class="form-label" asp-for="FirsName">First name:</label>
		<input type="text" asp-for="FirsName" class="form-control" />
		<label class="form-label" asp-for="LastName">Last name:</label>
		<input type="text" asp-for="LastName" class="form-control" />
		<label class="form-label" asp-for="HourlyRate">Hourly rate:</label>
		<input type="number" asp-for="HourlyRate" class="form-control" />
		<div class="mb-3">
			<label asp-for="DepartmentId" class="form-label">Department:</label>
				@Html.DropDownListFor(model => model.DepartmentId,
							(SelectList)ViewBag.Departments,
							new { @class = "form-select" })
				@Html.ValidationMessageFor(model => model.DepartmentId, "", new { @class = "text-danger" })
		</div>
		<div class="mb-3">
			<label asp-for="UserId" class="form-label">User:</label>
				@Html.DropDownListFor(model => model.UserId,
							(SelectList)ViewBag.Users,
							"-- Select user --",
							new { @class = "form-select" })
				@Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
		</div>
	</div>
	<div class="mt-3 d-flex justify-content-between">
		<div>
			<button type="submit" class="btn btn-warning">Create</button>
			<button type="reset" class="btn btn-danger">Reset</button>
		</div>
		<div>
			<a asp-action="Index" class="btn btn-secondary text-white">Back</a>
		</div>
	</div>
</form>
</div>
