@using Microsoft.AspNetCore.Identity
@model Microsoft.AspNetCore.Identity.IdentityRole

<div class="container text-center">
	<h1 class="my-5">Delete role @Model.Name</h1>
	<h4 class="my-5 text-danger">Do you really want to delete this role?</h4>
	<div class="table-responsive">
		<table class="table table-success table-striped shadow">
		<thead>
			<tr>
				<th scope="col">Name</th>
				<th scope="col">Action</th>
				<th scope="col">ID</th>
			</tr>
		</thead>
		<tbody>
							<tr>
							  <td>@Model.Name</td>
							  <td>
								  <div class="d-flex align-items-center justify-content-center gap-2">
									<form method="post">
									  <button type="submit" class="btn btn-danger btn-sm" asp-action="delete" 
									  asp-route-id="@Model.Id">Delete</button>
									</form>
									<a asp-action="Index" class="btn btn-secondary btn-sm text-white">Back</a>
								  </div>
							  </td>
							  <td>@Model.Id</td>
							</tr>

			</tbody>
		</table>
	</div>
</div>
